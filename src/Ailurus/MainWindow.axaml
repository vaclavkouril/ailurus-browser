<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Ailurus"
        x:Class="Ailurus.MainWindow"
        Title="Ailurus Web Browser"
        Width="800" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="urlBox" Grid.Row="0" Margin="5"/>
        <Button Name="goButton" Content="Go" Grid.Row="0" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" Click="GoButton_Click"/>
        <local:CefGlueBrowserControl Name="webView" Grid.Row="1"/>
    </Grid>
</Window>
