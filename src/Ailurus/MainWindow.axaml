<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Ailurus"
        x:Class="Ailurus.MainWindow"
        Title="Ailurus Web Browser"
        Width="800" Height="600"
        Background="White">

	<Grid>
	<Rectangle Grid.Column="0" Background="Black" Width="40"></Rectangle>
	<Label Background="Orange" Height="69">AILURUS BROWSER</Label>
	</Grid>    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox Name="urlBox" Width="600" Margin="5"/>
            <Button Name="goButton" Content="Go" Width="50" Margin="5" Click="GoButton_Click"/>
        </StackPanel>
        <TabControl Name="tabControl" Grid.Row="1" Margin="5">
            <!-- Tabs will be added here dynamically -->
        </TabControl>
    </Grid>
</Window>
