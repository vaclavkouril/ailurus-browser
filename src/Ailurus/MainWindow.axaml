<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Ailurus.ViewModels"
        x:Class="Ailurus.MainWindow"
        Title="Ailurus Web Browser"
        Width="1000" Height="800"
        Background="White"
        x:DataType="viewModels:MainWindowViewModel">

    <Window.DataContext>
        <viewModels:MainWindowViewModel />
    </Window.DataContext>

    <Window.Styles>
        <Style Selector="Button#myBtn">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style Selector="TextBox#urlBox">
            <Setter Property="Background" Value="DarkGray" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style Selector="Button#goBtn">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Background="Gray" >
            <Rectangle Fill="Black" Width="40" Height="40" DockPanel.Dock="Left" Margin="5,0"/>
            <Label Content="AILURUS BROWSER" Background="Orange" Height="40" VerticalAlignment="Center" Padding="10" Margin="5,0" DockPanel.Dock="Left"/>
            <TextBox x:Name="urlBox" Width="400" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0" DockPanel.Dock="Left"/>
            <Button x:Name="goBtn" Content="Go" Width="50" Command="{Binding GoCommand}" Margin="5,0" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Tab Column with ScrollViewer -->
        <Grid Grid.Row="1" Grid.Column="0" Background="#EEEEEE">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Scrollable Tabs List -->
            <ScrollViewer Grid.Row="0">
                <ItemsControl ItemsSource="{Binding Tabs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:BrowserTabViewModel">
                            <DockPanel>
                                <TextBlock Text="{Binding Header}" VerticalAlignment="Center" Margin="5"/>
                                <Button Content="x" Command="{Binding CloseTabCommand}" CommandParameter="{Binding .}"
                                        Width="20" Height="20" Margin="5" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- New Tab Button -->
            <Button Grid.Row="1" x:Name="myBtn" Content="+" Command="{Binding AddNewTabCommand}" HorizontalAlignment="Center" Margin="5"/>
        </Grid>

        <!-- Browser Content -->
        <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding SelectedTab.Content}" />
    </Grid>
</Window>
