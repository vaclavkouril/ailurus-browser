<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Ailurus.ViewModels"
        xmlns:converters="clr-namespace:Ailurus.Converters"
        x:Class="Ailurus.MainWindow"
        Title="Ailurus Web Browser"
        Width="1000" Height="800"
        Background="White"
        x:DataType="viewModels:MainWindowViewModel">

    <Window.Resources>
        <converters:SelectedTabConverter x:Key="SelectedTabConverter"/>
    </Window.Resources>
    
    <Window.Styles>
        <Style Selector="Button#MyBtn">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#E07A5F" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="Width" Value="100" />
        </Style>
        <Style Selector="TextBox#UrlBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="CornerRadius" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="35" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#D1D1D1" />
            <Setter Property="MinWidth" Value="150" />
        </Style>
        <Style Selector="Button#GoBtn, Button#SettingsBtn, Button#RefreshBtn,
                Button#BackBtn, Button#ForwardBtn, Button#BookmarkBtn">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="5,0,5,0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="Auto,5,*">

        <!-- Header Section -->
        <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Background="Gray" Height="50" VerticalAlignment="Center"
              ColumnDefinitions="Auto,Auto,Auto,*,Auto,Auto,Auto,Auto" RowDefinitions="60">

            <Button Grid.Column="0" x:Name="BackBtn" Content="Back" Command="{Binding BackCommand}" Width="60" HotKey="{Binding BackGesture}" />
            <Button Grid.Column="1" x:Name="ForwardBtn" Content="Forward" Command="{Binding ForwardCommand}" Width="70" HotKey="{Binding ForwardGesture}"/>
            <Label Grid.Column="2" Content="AILURUS BROWSER" Background="Orange" VerticalAlignment="Center" Padding="10" Margin="5,0"/>
            <TextBox Grid.Column="3" x:Name="UrlBox" AcceptsReturn="False" Watermark="Enter URL" Text="{Binding EditableUrl}" Margin="5,0">
                <TextBox.KeyBindings>
                    <KeyBinding Gesture="Enter" Command="{Binding GoCommand}" />
                </TextBox.KeyBindings>
            </TextBox>
            <Button Grid.Column="4" x:Name="GoBtn" Content="Go" Width="50" Command="{Binding GoCommand}" HotKey="{Binding GoGesture}" />
            <Button Grid.Column="5" x:Name="RefreshBtn" Content="Refresh" Width="70" Command="{Binding ReloadCommand}" HotKey="{Binding ReloadGesture}" />
            <Button Grid.Column="6" x:Name="BookmarkBtn" Content="Bookmark" Width="70" Command="{Binding AddBookmarkCommand}" HotKey="{Binding AddBookmarkGesture}" />
            <Button Grid.Column="7" x:Name="SettingsBtn" Content="Options" Width="70">
                <Button.Flyout>
                    <Flyout Placement="Bottom">
                        <StackPanel>
                            <Button Content="History" Command="{Binding OpenHistoryCommand}" HotKey="{Binding OpenHistoryGesture}" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
        
        <!-- Bookmarks Row -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="#2E2E2E" VerticalAlignment="Top">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                <ItemsControl ItemsSource="{Binding Bookmarks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:BookmarkItemViewModel">
                            <Button Command="{Binding SelectBookmarkCommand}"
                                    Width="140"
                                    HorizontalAlignment="Stretch">
                                <Grid ColumnDefinitions="*, Auto" HorizontalAlignment="Stretch">
                                    <TextBlock Grid.Column="0" Text="{Binding Title}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <Button Grid.Column="1" Content="x" Command="{Binding RemoveBookmarkCommand}"
                                            Width="20" Height="20" Margin="5,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                            Background="#2B2B2B" Foreground="White"/>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>



        <!-- Tab Column with ScrollViewer -->
        <Grid Grid.Row="2" Grid.Column="0" Background="#2E2E2E">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Scrollable Tabs List -->
            <ScrollViewer Grid.Row="0" Background="#333333">
                <ItemsControl ItemsSource="{Binding Tabs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:BrowserTabViewModel">
                            <Button Background="{Binding IsSelected, Converter={StaticResource SelectedTabConverter}}"
                                    Command="{Binding SelectTabCommand}"
                                    Width="120"
                                    HorizontalAlignment="Left">
                                <Grid ColumnDefinitions="*, Auto" HorizontalAlignment="Stretch">
                                    <TextBlock Grid.Column="0" Text="{Binding Header}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <Button Grid.Column="1" Content="x" Command="{Binding CloseTabCommand}"
                                            Width="20" Height="20" Margin="5,0,5,0" HorizontalAlignment="Right" VerticalAlignment="Center" />
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- New Tab Button -->
            <Button Grid.Row="1" x:Name="MyBtn" Content="+" Command="{Binding AddNewTabCommand}" HorizontalAlignment="Center" Margin="10" Foreground="White" Background="#E07A5F"/>

            <!-- Invisible Buttons for Tab Navigation -->
            <Button Grid.Row="0" Width="0" Height="0" Command="{Binding NavigateUpCommand}" HotKey="{Binding NavigateUpGesture}" />
            <Button Grid.Row="0" Width="0" Height="0" Command="{Binding NavigateDownCommand}" HotKey="{Binding NavigateDownGesture}" />
        </Grid>

        <!-- GridSplitter for Resizing Tab Column -->
        <GridSplitter Grid.Row="2" Grid.Column="1" Width="5" HorizontalAlignment="Center" Background="Gray"/>

        <!-- Browser Content -->
        <Panel Grid.Row="2" Grid.Column="2" Background="White">
            <!-- Browser Content will be added here -->
            <ContentControl Content="{Binding BrowserContent}" /> 
        </Panel>
    </Grid>
</Window>
